.navbar
  background-color: navbar-background-color
  min-height: navbar-height
  position: relative

  &.navbar--black
    background-color: #222

    .navbar-item,
    .navbar-link
      color #fff

  &.navbar--transparent
    background-color: transparent
  
    
.navbar-fixed
  position: fixed
  left: 0
  right: 0
  z-index: navbar-fixed-z

.navbar-menu
  display flex
  justify-content flex-end
  align-items: center

.navbar-item,
.navbar-link
  display: block
  position: relative
  padding: 0.5rem 0.75rem
  color: navbar-item-color
  cursor: pointer

  &.navbar-item--white,
  &.navbar-link--white
    color #fff

  &:hover,
  &.active
    background-color: navbar-item-hover-background-color
    color: navbar-item-hover-color

  &:last-child
    padding-right: 0


