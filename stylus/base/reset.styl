//Settings
html
	line-height 1.4
	font-size 18px
	color htmlColor

	@media screen and (max-width desktopWidth)
		font-size 16px

	@media screen and (max-width tableWidth)
		font-size 14px

	@media screen and (max-width phoneWidth)
		font-size 12px

body
	font-family mainFont

h1,h2,h3,h4,h5,h6
	font-weight 600
	margin 0

ul,li
	margin 0
	padding 0
	list-style-type none

p
	margin 0

a
	text-decoration none
	color blackColor

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

section
	position relative
	padding 60px 0

	@media screen and (max-width desktopWidth)
		padding 40px 0

	@media screen and (max-width tableWidth)
		padding 30px 0

	@media screen and (max-width phoneWidth)
		padding 20px 0

textarea
	resize none

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

//Main
.container
	width 100%
	max-width desktopWidth
	margin 0 auto
	position relative
	padding 0 40px

	@media screen and (max-width smDesktopWidth)
		max-width tableWidth
		padding 0 30px

	@media screen and (max-width tableWidth)
		max-width phoneWidth
		padding 0 20px

	@media screen and (max-width phoneWidth)
		max-width smPhoneWidth
		padding 0 10px


.wrapper
	display: flex
	flex-direction column
	min-height 100vh

.content-wrapper
	display flex
	flex-direction column
	flex 1


