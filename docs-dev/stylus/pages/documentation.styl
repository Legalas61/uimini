// Main

hr
  border: 1px solid #ccc;
  border-width: .3px;
  margin: 40px 0;

.content-docs_header
  margin-bottom 60px

.docs-descr
  display block
  margin-bottom rem(10)

.docs-descr__name
  padding: 18px 24px;
  background-color: #fafafa;
  border: 1px solid #eaeefb;

.content-docs_help
  margin-bottom 8px

.example
  padding: 20px
  border 1px solid #cccccc
  border-radius: 8px
  margin-bottom 40px

.example-empty
  margin-bottom 40px

// Typography
.typography-doc

  .example
    .ui-title-1, .ui-title-2, .ui-title-3, .ui-title-4,
    .ui-text-regular, .ui-text-small, .ui-text-smaller
      margin-bottom 0

// Colors
.example-color__list
  display flex

.example-color__item
  display flex
  flex-direction: column
  width 160px
  padding: 10px 12px
  margin: 0 4px 
  border-radius: 4px
  color #fff

.example-color__box__title
  font-weight 600

  &.small
    padding: 10px 0
    font-size rem(15)
  &.black
    color: neutral-primary

// Labels
.labels-doc
  
  .example,
  .example-empty

    .label
      margin-right 10px

      &:last-child
        margin-right 0

// Button
.buttons-doc
  
  .example,
  .example-empty
  
    .button
      margin-right 10px
      
      &:last-child
        margin-right 0
      
// Card
.card-doc

  .col-md-4
    padding-right 12px

    &:last-child
      padding-right 0