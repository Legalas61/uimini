//Move to ui
.sidebar
  position fixed
  width 240px
  height: 100%;

  top 0
  bottom 0
  margin-top 80px
  overflow-x: scroll;
  height: 100vh;

.sidebar-content
  padding-bottom: 80px
  opacity .5
  transition: all .25s cubic-bezier(.02,.01,.47,1);
  
  &:hover
    opacity 1

.sidebar-list
  display flex
  flex-direction: column
  margin: 20px auto

.sidebar-item
  font-size rem(20)
  line-height 2.1
  opacity .7
  transition: all .25s cubic-bezier(.02,.01,.47,1);


  &:hover
    opacity 1

.sidebar-link
  color #777